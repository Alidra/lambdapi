{
  "name": "vscode-lp",
  "displayName": "LambdaPi-VSCode",
  "description": "Proof-checking mode for the lambdapi proof assistant",
  "contributors": [
    "Emilio Jes√∫s Gallego Arias <e@x80.org>",
    "Houda Mouzoun <houda.mouzoun@gmail.com>"
  ],
  "version": "0.1.0",
  "publisher": "MINES ParisTech / INRIA",
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "theorem proving",
    "dedukti"
  ],
  "homepage": "https://github.com/Deducteam/lambdapi",
  "activationEvents": [
    "onLanguage:lp"
  ],
  "contributes": {
    "languages": [
      {
        "id": "lp",
        "aliases": [
          "Dedukti",
          "Lambdapi"
        ],
        "extensions": [
          ".lp"
        ],
        "configuration": "./lp.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lp",
        "scopeName": "source.lp",
        "path": "./syntaxes/lp.tmLanguage"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "lambdapi configuration",
      "properties": {
        "lp.path": {
          "type": "string",
          "default": "lp-lsp",
          "description": "Path to lp-lsp binary"
        }
      }
    },
    "commands": [
      {
        "command": "extension.vscode-lp.restart",
        "title": "Restart the Lambdapi VsCode mode",
        "category": "Lambdapi"
      }
    ]
  },
  "main": "out/src/client.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "vscode-languageclient": "5.2.1"
  }
}
